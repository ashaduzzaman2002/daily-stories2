    <% if (typeof loginPage === 'undefined' && typeof signup === 'undefined') {
    %>
    <header class="py-3 border-bottom custom-nav mb-4">
      <nav
        class="container-xxl px-md-5 mb-2 mb-md-0 d-flex flex-wrap align-items-center justify-content-center justify-content-md-between"
      >
        <a class="navbar-brand text-dark" href="/">DAILY STORIES</a>

        <ul class="nav col-12 col-md-6 justify-content-center">
          <li><a href="/" class="nav-link px-3 link-secondary">Home</a></li>
